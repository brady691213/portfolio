---
const {employer, startDate, endDate, url, description, position, location, highlights} = Astro.props
const current = endDate.length == 0
// TASKT: Add year/month calculation
---
<slot />
<div class="position">{position}</div>, <span class="name">{employer}</span>
<a href={url}>{employer}</a>
<span>{location}</span>}
<span class="date">{startDate}</span> to {current ? <span>Present</span> : <span>{endDate}</span>}
<p>
    {description}
</p>
<ul>
    {
        highlights.map((h: string) => {
            return <li>{h}</li>
        })
    }
</ul>

